#:set color_txt_d "#4424D6"
#:set color_btn_bg "#B2D732"
#:set color_btn_bg_pr  125/255,17/255,135/255,1
#:set color_bg "#F0F7D4"
#:set color_a "#110934"
#:set color_b "#FC600A"



<ButtonMenu@Button>:
    size_hint_y: 0.3
    font_size:"30sp"
    color:color_txt_d
    background_color:color_btn_bg 
    background_normal:""
    on_release: self.background_color=color_btn_bg
    background_down:""
    on_press:self.background_color=color_btn_bg_pr 
    #font_name: 'aseets/Lemon-Regular.ttf'


<MenuScreen>:
    canvas.before:
        Rectangle:
            pos:self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label:
            text:'Cosmo Adventure'
            font_name: 'assets/Lemon-Regular.ttf'
            font_size: '30dp'
            color: 'red'
            size_hint_y: .2
        Image:
            source: 'aseets/images/6.png'
            size_hint_y: .3
            allow_stretch: True

        Widget:
            size_hint_y: 0.3
        ButtonMenu:
            text:"Start"
            on_press:root.manager.current= 'game'
        ButtonMenu: 
            text:"Lider Board"
        ButtonMenu:
            text:'Settings'
            
<GameScreen>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Label:
                text:'score: ' +str(root.points)
                font_name: 'assets/Lemon-Regular.ttf'
                font_size: '30dp'
                color:color_a
            FloatLayout:
                size_hint_y: 0.8
                Planet:
                    id:planet
            BoxLayout:
                size_hint_y: 0.1
<Planet>
    allow_stretch: True
    size_hint: None, None
    size: '200dp', '200dp'
    center: self.parent.centre 
                
        